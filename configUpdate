#!/bin/bash
if [ ! -d "$HOME/.config/nvim" ]
  then
    echo "Directory ~/.config/nvim does not exists."
    echo "Create ~/.config/nvim."
    mkdir ~/.config/nvim
  fi

if [ ! -d "$HOME/.config/nvim/lua" ]
  then
    echo "Directory ~/.config/nvim/lua does not exists."
    echo "Create ~/.config/nvim/lua."
    mkdir ~/.config/nvim/lua
  fi

cp init.lua ~/.config/nvim/init.lua
cp plugins.lua ~/.config/nvim/lua/plugins.lua